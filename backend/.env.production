# DocuMind AI Backend - PRODUCTION Configuration
# Copy these values to Render Dashboard Environment Variables

# =============================================================================
# MongoDB Configuration (SET IN RENDER DASHBOARD - SECRET)
# =============================================================================
MONGODB_URI=your-mongodb-uri-here
MONGODB_DATABASE=documind

# =============================================================================
# API Configuration
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1
ENVIRONMENT=production

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
RATE_LIMIT_INGEST=60/minute
RATE_LIMIT_RETRIEVE=60/minute
RATE_LIMIT_GENERATE=30/minute

# =============================================================================
# Data Storage
# =============================================================================
DATA_DIR=/app/data

# =============================================================================
# Logging (Production)
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# =============================================================================
# Embedding Configuration (Hugging Face)
# =============================================================================
HF_API_KEY=your-huggingface-api-key-here
HF_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
USE_MOCK_EMBEDDINGS=false
EMBEDDING_DIMENSIONS=384

# =============================================================================
# LLM Configuration (Hugging Face - Cloud)
# =============================================================================
LLM_PROVIDER=huggingface
HF_LLM_MODEL=mistralai/Mistral-7B-Instruct-v0.2
USE_MOCK_LLM=false

# LLM Request Settings
LLM_TIMEOUT=300.0
LLM_MAX_RETRIES=2
LLM_DEFAULT_MAX_TOKENS=512
LLM_DEFAULT_TEMPERATURE=0.25

# =============================================================================
# CORS Configuration (UPDATE WITH YOUR NETLIFY URL)
# =============================================================================
CORS_ORIGINS=https://your-app-name.netlify.app
CORS_ALLOW_CREDENTIALS=true

# =============================================================================
# Security
# =============================================================================
MAX_QUERY_LENGTH=2000
MAX_REPO_URL_LENGTH=500
